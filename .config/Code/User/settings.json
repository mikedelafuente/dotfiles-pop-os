{
    "editor.fontSize": 14,
    "editor.lineHeight": 1.5,
    "editor.wordWrap": "on",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "explorer.confirmDelete": false,
    "editor.fontFamily": "Hack Nerd Font Mono, FiraCode Nerd Font Mono, JetBrainsMono Nerd Font, MeslogLGM Nerd Font, Consolas, 'Courier New', monospace",
    "files.autoSave": "onWindowChange",
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true
    },
    "workbench.colorTheme": "Default Dark+",
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "github.copilot.nextEditSuggestions.enabled": true,
    "window.zoomLevel": 0,
    "terminal.integrated.defaultProfile.linux": "bash",
    "git.autofetch": true
}